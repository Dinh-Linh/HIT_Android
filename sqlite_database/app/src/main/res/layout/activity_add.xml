<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context=".AddActivity">

    <EditText
        android:id="@+id/idPodcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập id Podcast"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên Podcast"/>

    <EditText
        android:id="@+id/gerne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập thể loại Podcast"/>

    <EditText
        android:id="@+id/author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tác giả Podcast"/>

    <EditText
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập link ảnh Podcast"/>

    <EditText
        android:id="@+id/duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập thời lượng Podcast"/>

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Podcast"
        android:layout_gravity="center"/>
</LinearLayout>